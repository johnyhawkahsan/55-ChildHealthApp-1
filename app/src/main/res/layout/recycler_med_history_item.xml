<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/medPrescriptionIcon"
            android:layout_width="@dimen/profile_image_size"
            android:layout_height="@dimen/profile_image_size"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/default_margin"
            android:contentDescription="@string/childpicture"
            app:srcCompat="@drawable/doctor_prescription" />

        <TextView
            android:id="@+id/tv_medID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/medPrescriptionIcon"
            android:lines="1"
            tools:text="medID = 1"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/tv_chID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_medID"
            android:layout_toEndOf="@id/medPrescriptionIcon"
            android:gravity="center_vertical"
            android:lines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="14sp"
            tools:text="chID = 1" />

        <TextView
            android:id="@+id/tv_visitDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_chID"
            android:layout_toEndOf="@id/medPrescriptionIcon"
            android:gravity="center_vertical"
            android:lines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="14sp"
            tools:text="Visit Date = 12-Feb-18" />

        <TextView
            android:id="@+id/tv_doctorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_visitDate"
            android:layout_toEndOf="@id/medPrescriptionIcon"
            android:gravity="center_vertical"
            android:lines="1"
            tools:text="Ahmad Gul"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
