<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="@android:dimen/thumbnail_width"
            android:layout_height="@android:dimen/thumbnail_width"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/random_baby" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:text="@string/hint_name" />

        <TextView
            android:id="@+id/textViewChID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/default_margin"
            android:drawableStart="@drawable/ic_lightbulb_outline_black_24dp"
            android:gravity="center"
            tools:text="1" />

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="@dimen/cardview_default_radius"
            app:cardElevation="@dimen/cardview_default_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/default_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/default_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:drawablePadding="@dimen/default_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        style="@style/ContactLabelTextView"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:text="Name"/>

                    <TextView
                        android:id="@+id/tvChName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:drawablePadding="@dimen/default_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        style="@style/ContactTextView"
                        tools:text="Maryam"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/default_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:drawablePadding="@dimen/default_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        style="@style/ContactLabelTextView"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:text="Gender"/>

                    <TextView
                        android:id="@+id/tvGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:drawablePadding="@dimen/default_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        style="@style/ContactTextView"
                        tools:text="Female" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/default_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:drawablePadding="@dimen/default_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        style="@style/ContactLabelTextView"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:text="Blood Group"/>

                    <TextView
                        android:id="@+id/tvBloodGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:drawablePadding="@dimen/default_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        style="@style/ContactTextView"
                        tools:text="Blood Group" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/default_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:drawablePadding="@dimen/default_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        style="@style/ContactLabelTextView"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:text="Date of Birth"/>

                    <TextView
                        android:id="@+id/tvDOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/default_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        style="@style/ContactTextView"
                        tools:text="12-Feb-2016" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/default_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:drawablePadding="@dimen/default_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        style="@style/ContactLabelTextView"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:text="Age"/>

                    <TextView
                        android:id="@+id/tvAge"
                        style="@style/ContactTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/default_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        tools:text="3 Years" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/default_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:drawablePadding="@dimen/default_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        style="@style/ContactLabelTextView"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:text="Height"/>

                    <TextView
                        android:id="@+id/tvHeight"
                        style="@style/ContactTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/default_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        tools:text="3ft" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/default_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:drawablePadding="@dimen/default_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        style="@style/ContactLabelTextView"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:text="Weight"/>

                    <TextView
                        android:id="@+id/tvWeight"
                        style="@style/ContactTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/default_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        tools:text="20kg" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/default_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:drawablePadding="@dimen/default_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        style="@style/ContactLabelTextView"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:text="Last Profile Updated on"/>

                    <TextView
                        android:id="@+id/tvLastProfileUpdateDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/default_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        style="@style/ContactTextView"
                        tools:text="12-Jan-2019" />

                </LinearLayout>


                <Button
                    android:id="@+id/editChildData"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="Edit"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/viewMedicalRecord"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:text="View Medical Record"
                        android:layout_weight="1"
                        android:background="@color/colorLightBlue"
                        android:textColor="@color/colorWhite"
                        android:padding="@dimen/big_padding"
                        android:layout_margin="2dp"/>

                    <Button
                        android:id="@+id/viewVaccinationRecord"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:text="View Vaccination Record"
                        android:layout_weight="1"
                        android:background="@color/colorLightBlue"
                        android:textColor="@color/colorWhite"
                        android:padding="@dimen/big_padding"
                        android:layout_margin="2dp"/>

                </LinearLayout>



            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>

